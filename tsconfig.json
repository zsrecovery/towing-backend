{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",       
    "rootDir": ".",
    "lib": ["es2020"],
    "types": ["node", "dotenv"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"]
}
