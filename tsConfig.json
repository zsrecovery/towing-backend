{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",       // compiled JS goes here
    "rootDir": ".",  
    "lib": ["es2020"],       // root of TS files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"]
}
